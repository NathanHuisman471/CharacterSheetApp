<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".buildCharacter">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/raceLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/raceSelectorLabel"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/raceSelector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/raceDescriptionLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:onClick="onDescriptionClick"
                android:text="@string/descriptionPlaceholder"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/heritageSelector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/heritageSelectorLabel"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/heritageSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/heritageDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/descriptionPlaceholder"
                android:maxLines="1"
                android:onClick="onHeritageDescriptionClick"
                android:textSize="12sp" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/buildTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buildTitleString"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.493" />
</androidx.constraintlayout.widget.ConstraintLayout>